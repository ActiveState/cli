type Version {
  state: StateVersion!
}

type StateVersion {
  license: String!
  version: String!
  branch: String!
  revision: String!
  date: String!
}

type AvailableUpdate {
  version: String!
  channel: String!
  path: String!
  platform: String!
  sha256: String!
  url: String!
  tag: String
}

type DeferredUpdate {
  channel: String!
  version: String!
  logfile: String!
}

type Project {
  namespace: String!
  locations: [String!]!
}

type Query {
  version: Version
  availableUpdate: AvailableUpdate
  update(channel: String, version: String): DeferredUpdate
  projects: [Project]!
}
